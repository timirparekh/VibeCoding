@{
    ViewData["Title"] = "Home Page";
}
<div class="page-bg">
    <div class="chat-box">
        <h2 class="chat-title">Upload Your Document</h2>
        <p class="chat-instructions">
            Please upload your document using the form below. Supported formats: PDF, DOCX, TXT.<br>
            After uploading, click Submit to process your document.
        </p>
        <form method="post" enctype="multipart/form-data">
            <div class="chat-upload">
                <input type="file" name="uploadedFile" class="form-control chat-file-input" />
            </div>
            <button type="submit" class="btn btn-primary chat-submit-btn">Submit</button>
        </form>
    </div>
</div>
